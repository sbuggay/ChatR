@{
    ViewBag.Title = "Home Page";
}

<hr />


<div class="messages">
    <table class="table table-striped table-bordered">
        <tbody data-bind="foreach:messages">
            <tr>
                <td>
                    <span class="date" data-bind="text: date"></span>
                    <span data-bind="html: userName"></span>
                    <span>:</span>
                    <span data-bind="html: message"></span>
                </td>
            </tr>
        </tbody>
    </table>
</div>



<div class="form-group">
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Message" data-bind="value:message">
        <span class="input-group-btn">
            <button class="btn btn-default" type="button" data-bind="click:sendMessage">Send</button>
        </span>
    </div>
</div>


@section scripts {
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <script src="~/SignalR/hubs"></script>
    <script src="~/Scripts/knockout-3.3.0.js"></script>
    <script src="~/Scripts/ChatR.js"></script>
}
